# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/unreviewhub?schema=public"

# Server Configuration
PORT=3000
HOST=0.0.0.0
NODE_ENV=development
LOG_LEVEL=info

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:3000

# Authentication Configuration
JWT_SECRET=your-super-secret-jwt-key-here
JWT_EXPIRES_IN=8h
MFA_SECRET=your-mfa-secret-key

# Redis Configuration (for caching and sessions)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your-redis-password

# UN SSO Configuration
UN_SSO_URL=https://sso.un.org
UN_SSO_CLIENT_ID=your-client-id
UN_SSO_CLIENT_SECRET=your-client-secret
UN_SSO_REDIRECT_URI=http://localhost:3000/auth/callback

# File Storage Configuration
MINIO_ENDPOINT=localhost
MINIO_PORT=9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET=unreviewhub-files
MINIO_USE_SSL=false

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9464
JAEGER_ENDPOINT=http://localhost:14268/api/traces

# Rate Limiting Configuration
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60000

# Export Configuration
EXPORT_STORAGE_PATH=/tmp/exports
EXPORT_RETENTION_DAYS=7
MAX_EXPORT_SIZE_MB=100

# Audit Configuration
AUDIT_RETENTION_DAYS=2555  # 7 years
AUDIT_ENCRYPTION_KEY=your-audit-encryption-key

# Email Configuration (for notifications)
SMTP_HOST=smtp.un.org
SMTP_PORT=587
SMTP_USER=notifications@un.org
SMTP_PASSWORD=your-smtp-password
SMTP_FROM=UNReviewHub <notifications@un.org>

# Webhook Configuration
WEBHOOK_SECRET=your-webhook-secret
WEBHOOK_TIMEOUT=30000

# Development Configuration
DEV_SEED_DATA=true
DEV_LOG_SQL=false
DEV_MOCK_SSO=false